<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzqing.admin.mapper.config.ConfigMapper">

    <resultMap id="baseResult" type="config">
        <id column="id" property="id"/>
        <result column="key" property="key"/>
        <result column="value" property="value"/>
        <result column="remark" property="remark" />
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="tableName">
        hw_config
    </sql>

    <select id="selectList" resultMap="baseResult" parameterType="config">
        select
            id,
            `key`,
            `value`,
            remark,
            create_by,
            create_time,
            update_by,
            update_time
        from
            <include refid="tableName"/>
        <where>
            <if test="key != null and key != ''">
                `key` = #{key}
            </if>
        </where>
    </select>

    <insert id="insert" parameterType="config" >
        INSERT INTO
            <include refid="tableName"/>
        (
            `key`,
            `value`,
            remark,
            create_by,
            create_time,
            update_by,
            update_time
        ) VALUE (
            #{key},
            #{value},
            #{remark},
            #{createBy},
            #{createTime},
            #{updateBy},
            #{updateTime}
        )
    </insert>

    <delete id="deletedById" parameterType="string">
        DELETE FROM
            <include refid="tableName"/>
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="config">
        UPDATE
            <include refid="tableName"/>
        <set>
            <if test="key != null and key != ''">
                `key` = #{key},
            </if>
            <if test="value != null and value != ''">
                `value` = #{value},
            </if>
            <if test="remark != null and remark != ''">
                remark = #{remark},
            </if>
            <if test="updateBy != null and updateBy != ''">
                update_by = #{updateBy},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime}
            </if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
